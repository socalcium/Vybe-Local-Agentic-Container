{
  "$schema": "https://schema.tauri.app/config/1",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "devPath": "../src",
    "distDir": "../src"
  },
  "package": {
    "productName": "Vybe AI Desktop",
    "version": "0.8.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "notification": {
        "all": true
      },
      "http": {
        "all": true,
        "request": true
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true
      }
    },
    "bundle": {
      "active": true,
      "targets": ["nsis"],
      "identifier": "com.vybe.ai.desktop",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [
        "../../vybe_app",
        "../../requirements.txt",
        "../../run.py",
        "../../instance"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 900,
        "width": 1400,
        "minHeight": 500,
        "minWidth": 400,
        "maxHeight": 2160,
        "maxWidth": 3840,
        "resizable": true,
        "maximizable": true,
        "minimizable": true,
        "closable": true,
        "title": "Vybe AI",
        "url": "loading.html",
        "center": true,
        "focus": true,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "label": "main",
        "fileDropEnabled": false,
        "decorations": true,
        "transparent": false
      }
    ]
  }
}